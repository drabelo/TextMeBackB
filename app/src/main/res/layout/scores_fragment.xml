<FrameLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/padding_small"
    android:fontFamily="sans-serif-thin"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- enabled layout -->

    <LinearLayout
        android:id="@+id/sentCounterLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <!-- Hero Card -->


        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/card_padding" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/card_margin"
                android:orientation="vertical"
                android:padding="@dimen/card_padding" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin_small"
                    android:text="TOP PEOPLE"
                    android:textColor="@color/app_theme_light"
                    android:textSize="@dimen/card_title"
                    android:textStyle="bold" />

                <!-- start -->

                <TextView
                    android:id="@+id/bf1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center|left"
                    android:fontFamily="sans-serif-thin"
                    android:text="Richard Spencer"
                    android:textColor="@color/text_black"
                    android:textSize="@dimen/text1"
                    android:textAlignment="inherit"
                    android:singleLine="false"
                    android:paddingLeft="30sp" />

                <TextView
                    android:id="@+id/bf2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center|left"
                    android:text="Neide T"
                    android:fontFamily="sans-serif-thin"
                    android:textColor="@color/text_black"
                    android:textSize="@dimen/text1"
                    android:textAlignment="inherit"
                    android:singleLine="false"
                    android:paddingLeft="30sp" />

                <TextView
                    android:id="@+id/bf3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center|left"
                    android:text="Kayuu"
                    android:fontFamily="sans-serif-thin"
                    android:textColor="@color/text_black"
                    android:textSize="@dimen/text1"
                    android:textAlignment="inherit"
                    android:singleLine="false"
                    android:paddingLeft="30sp" />

            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/card_padding" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/card_margin"
                android:orientation="vertical"
                android:padding="@dimen/card_padding" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin_small"
                    android:text="TOTAL MSGS"
                    android:textColor="@color/app_theme_light"
                    android:textSize="@dimen/card_title"
                    android:textStyle="bold" />

                <!-- start -->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:baselineAligned="false"
                    android:orientation="horizontal" >

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical" >

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="RECEIVED"
                            android:textSize="@dimen/item_title"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/receivedSMS"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="0"
                            android:fontFamily="sans-serif-thin"

                            android:textColor="@color/text_black"
                            android:textSize="@dimen/text1" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical" >

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="SENT"
                            android:textSize="@dimen/item_title"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/sentSMS"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="0"
                            android:fontFamily="sans-serif-thin"

                            android:textColor="@color/text_black"
                            android:textSize="@dimen/text1" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/card_padding" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/card_margin"
                android:orientation="vertical"
                android:padding="@dimen/card_padding" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin_small"
                    android:text="PICTURE MSGS"
                    android:textColor="@color/app_theme_light"
                    android:textSize="@dimen/card_title"
                    android:textStyle="bold" />

                <!-- start -->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:baselineAligned="false"
                    android:orientation="horizontal" >

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical" >

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="RECEIVED"
                            android:textSize="@dimen/item_title"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/MMSreceived"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="0"
                            android:fontFamily="sans-serif-thin"

                            android:textColor="@color/text_black"
                            android:textSize="@dimen/text1" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical" >

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="SENT"
                            android:textSize="@dimen/item_title"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/MMSsent"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="0"
                            android:fontFamily="sans-serif-thin"

                            android:textColor="@color/text_black"
                            android:textSize="@dimen/text1" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>

        </LinearLayout>
    </FrameLayout>